{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/precisiontox/ptox-metadata-manager/main/ptmd/resources/schemas/exposure_schema.json",
  "type": "object",
  "description": "A JSON Schema representing an exposure condition",
  "properties": {
    "chemical": {
      "type": "string",
      "enum": [
        "chemical1",
        "chemical2",
        "chemical3"
      ],
      "description": "The chemical name."
    },
    "dose": {
      "type": "string",
      "enum": [
        "BMD10",
        "BMD25",
        "10mg/L"
      ]
    }
  }
}