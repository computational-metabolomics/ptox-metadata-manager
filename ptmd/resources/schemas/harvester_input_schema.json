{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/precisiontox/ptox-metadata-manager/main/ptmd/resources/schemas/harvester_input_schema.json",
  "type": "object",
  "description": "A schema to represent the input data required by the metadata harvester.",
  "properties": {
      "partner": {
        "type": "string",
        "enum": [
          "KIT", "IUB", "UFZ", "WF", "NIH", "CLU", "LEITAT", "UOB"
        ],
        "description": "The partner name generating the samples."
      },
      "organism": {
        "type": "string",
        "enum": ["organism1", "organism2", "organism3"],
        "description": "The organism code from which the samples were generated."
      },
      "exposure_batch": {
        "type": "string",
        "pattern": "^[A-Z][A-Z]$",
        "maxLength": 2
      },
      "replicates4exposure": {
        "type": "number",
        "minimum": 4
      },
      "replicates4control": {
        "type": "number",
        "minimum": 4
      },
      "time_points": [],
      "exposure": {
          "type": "array",
          "description": "The exposure represent a list of chemical names and doses.",
          "items": {
              "$ref": "exposure_schema.json#"
          }
      },
      "replicates_blank": {
        "type": "number",
        "minimum": 1,
        "maximum": 3
      },
      "start_date": {
        "type": "string",
        "format": "date"
      },
      "end_date": {
          "type": "string",
          "format": "date"
      }
  }
}